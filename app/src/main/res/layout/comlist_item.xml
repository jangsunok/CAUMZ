<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="낭풍"
                android:maxLength="12"
                android:ellipsize="end"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/list_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/list_title"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_corner"
                android:text="배달가능" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/list_menulayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_layout"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대표메뉴 "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김치찌개계란말이" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/list_like_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_like_img"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/likebtn" />

            <TextView
                android:id="@+id/list_like"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>


